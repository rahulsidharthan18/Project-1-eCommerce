    console.log(proId, proPrice, proModel, "eeeeeeeeeeeeeeeeeeeeeeeeeeeee")
    document.getElementById('proId').value = proId
    document.getElementById('proPrice').value = proPrice
    document.getElementById('proModel').value = proModel
  }
</script>

<script>
function goBack() {
    history.back();
}
</script>
