        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Default Table</h5>

              <!-- Default Table -->
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Selling Price</th>
                    <th scope="col">Primary image</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Remove</th>


                  </tr>
                </thead>
                <tbody>
                  {{#each product}}
                  <tr>
                    <th scope="row"></th>
                    <td>{{this.prodName}}</td>
                    <td>{{this.prodCategory}}</td>
                    <td>{{this.prodBrand}}</td>
                    <td>{{this.prodPrice}}</td>
                    <td><img style="width:60px; height:auto" src="/product-images1/{{this._id}}.jpg" alt="üòÅ"></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">üìù</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete {{this.prodName}}..‚ÅâÔ∏è')">üóëÔ∏è</a></td>

                  </tr>
                  {{/each}}

                </tbody>
              </table>
              <!-- End Default Table Example -->
            </div>
          </div>


        </div>
      </div>
    </section>

  </main><!-- End #main -->



