            <div class="card-body pb-0">
              <h5 class="card-title">Payment method <span>| Total</span></h5>

              <div id="trafficChart" style="min-height: 400px;" class="echart"></div>

              <script>
                document.addEventListener("DOMContentLoaded", () => {
                  echarts.init(document.querySelector("#trafficChart")).setOption({
                    tooltip: {
                      trigger: 'item'
                    },
                    legend: {
                      top: '5%',
                      left: 'center'
                    },
                    series: [{
                      name: 'Access From',
                      type: 'pie',
                      radius: ['40%', '70%'],
                      avoidLabelOverlap: false,
                      label: {
                        show: false,
                        position: 'center'
                      },
                      emphasis: {
                        label: {
                          show: true,
                          fontSize: '18',
                          fontWeight: 'bold'
                        }
                      },
                      labelLine: {
                        show: false
                      },
                      data: [{
                          value: {{data.placed}},
                          name: 'Placed'
                        },
                        {
                          value: {{data.pending}},
                          name: 'Pending'
                        },
                        {
                          value: {{data.delivered}},
                          name: 'Delivered'
                        },
                        {
                          value: {{data.cancelled}},
                          name: 'Cancelled'
                        },
                        {
                          value: {{data.returned}},
                          name: 'Returned'
                        }
                      ]
                    }]
                  });
                });
              </script>

