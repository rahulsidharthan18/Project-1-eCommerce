<!-- contact area start -->
<div class="contact__area">
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12">
        <div class="contact__content text-center mb-140">
          <h2>{{users.name}}</h2>
          <p>{{users.email}}<br />{{users.phone}}</p>
        </div>
      </div>
    </div>

    <div class="contact-wrapper align-items-center">

      <div class="row">

        {{! <div class="col-xl-6 col-lg-6 col-md-12 col-md-6"> }}
        <h4>Your saved adresses</h4>

        {{! <div class="table-responsive">
              
          </div> }}
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Full name</th>
              <th scope="col">street adress</th>
              <th scope="col">Town/city</th>
              <th scope="col">Pincode</th>
              <th scope="col">Mobile</th>
              <th scope="col">Email address</th>
              <th scope="col">Actions</th>

            </tr>
          </thead>
          
          <tbody>
           {{#each users.Addresses}}
  <tr>
    <td>{{this.name}}</td>
    <td>{{this.address}}</td>
    <td>{{this.town}}</td>
    <td>{{this.pincode}}</td>
    <td>{{this.mobile}}</td>
    <td>{{this.email}}</td>
    <td>
      <a href="/edit-user-address/{{this.addressId}}"><button class="badge badge-primary" style="color: black;">edit</button></a>
      <a href="/delete-user-address/{{this.addressId}}"><button class="badge badge-primary" style="color: black;">delete</button></a>
    </td>
  </tr>
{{/each}}


          </tbody>
        </table>
        <div>
        <a href="/add-user-adress">
          <button
          type="button"
          class="btn btn-secondary"
          data-toggle="button"
          aria-pressed="false"
          autocomplete="off"
        >
          Add new address
        </button>
        </a>
        </div>
        {{! </div> }}
      </div>
    </div>
  </div>
</div>
<!-- contact area end -->