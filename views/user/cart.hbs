<div class="f_cart_area pt-110 mb-100">

    <div class="container">

        <div class="row">

            <div class="col-xl-8 col-lg-8 col-md-12">

                <div class="cart_table">

                    <table>
                        <tr>
                            <td>Product</td>
                            <td>Model</td>
                            <td>price</td>
                            <td>Quantity</td>
                            <td>Total</td>
                            <td>Remove</td>

                        </tr>
                        <tbody>
                            {{#each products}}
