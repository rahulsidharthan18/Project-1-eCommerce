<!-- contact area start -->
<div class="contact__area">
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12">
        <div class="contact__content text-center mb-140">
          <h2>{{users.name}}</h2>
          <p>{{users.email}}<br />{{users.phone}}</p>
        </div>
      </div>
    </div>
    <div class="contact-wrapper align-items-center">
      <div class="row">

        <div class="col-xl-6 col-lg-6 col-md-12 col-md-6">
          <div class="form">
            <h4>Add new address</h4>
            <form action="/add-multi-address/{{users}}" method="POST">
              <div class="c-input-group">
                <label>Full name (required)</label>
                <input type="text" name="name" required />
              </div>
              <div class="c-input-group">
                <label>Street address (required)</label>
                <input type="text" name="address" required />
              </div>
              <div class="c-input-group">
                <label>Town/city (required)</label>
                <input type="text" name="town" required />
              </div>
              <div class="c-input-group">
                <label>Pincode (required)</label>
                <input type="text" name="pincode" required />
              </div>
              <div class="c-input-group">
                <label>Mobile (required)</label>
                <input type="text" name="mobile" required />
              </div>
              <div class="c-input-group">
                <label>Email address (required)</label>
                <input type="email" name="email" required />
              </div>
              <div class="submit-btn mt-4">
                <input type="submit" value="Add address" />
                <button onclick="goBack()" style="width: 37.3rem; margin-top: 1rem;"  class="btn btn-secondary">Go Back</button> 


              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- contact area end -->

<script>
function goBack() {
    history.back();
}
</script>