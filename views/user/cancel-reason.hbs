<body>

    <main id="main" class="main">
            <div class="container">

        <div class="pagetitle">
            <h1>Cancel Reason</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="">Cancel order >></li>
                    <li class="">Cancel Reason >></li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="col-lg-12">




                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Cancel Reason</h5>



                            <form class="row g-3" action="/cancel-user-order" method="post" >
                                <div class="col-md-12">
                                    <div class="form-floating">
                                        <input name="creason" type="text" class="form-control" id="floatingName"
                                            required placeholder="Reason for the order to be added" >
                                        <label for="floatingName">Cancel Reason</label>
                                        <span style="color: red;">{{error}}</span>
                                        <input type="text" name="orderId" value="{{body.orderId}}" hidden>
                                        <input type="text" name="orderStatus" value="{{body.orderStatus}}" hidden>
                                    </div>
                                </div>

                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <button onclick="goBack()"  class="btn btn-secondary">Cancel</button>
                                </div>
                            </form><!-- End floating Labels Form -->

                    </div>  
                    </div>

                </div>
            </div>
        </section>
            </div>

    </main><!-- End #main -->

    <script>
function goBack() {
    history.back();
}
</script>
